[ Examples ]

Example #1 radius_put_attr() example

<?php >
  mt_srand(time());
  $chall = mt_rand();
  $chapval = hash('md5', pack('Ca*',1 , 'sepp' . $chall));
  $pass = pack('CH*', 1, $chapval);
  if (!radius_put_attr($res, RADIUS_CHAP_PASSWORD, $pass)) {
  echo 'RadiusError:' . radius_strerror($res). "\n<br />";
  exit;
  }
<?>

